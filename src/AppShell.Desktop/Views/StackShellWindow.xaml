<Window x:Class="AppShell.Desktop.StackShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AppShell.Desktop"
        Width="640" Height="480" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <local:ShellDataTemplateSelector x:Key="ShellDataTemplateSelector" />
    </Window.Resources>
    <DockPanel>
        <Button Content="Back" Command="{Binding BackCommand}" DockPanel.Dock="Top" />
        <ContentControl Content="{Binding ActiveItem}" ContentTemplateSelector="{StaticResource ShellDataTemplateSelector}" />
    </DockPanel>
</Window>
